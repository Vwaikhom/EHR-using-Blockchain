    <main class="container mt-5">
      <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
          <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
              <div class="card-body">
                <h5 class="card-title">Register</h5>
                <form>
                  <div class="mb-3">
                    <label class="form-label" for="doctor_id"
                      >Doctor ID</label
                    >
                    <input
                      class="form-control"
                      type="number"
                      id="doctor_id"
                      name="doctor_id"
                      required
                      autofocus
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="doctor_name"
                      >Doctor Name</label
                    >
                    <input
                      class="form-control"
                      type="text"
                      id="doctor_name"
                      name="doctor_name"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="age"
                      >Doctor Specialization</label
                    >
                    <input
                      class="form-control"
                      type="text"
                      id="spec"
                      name="spec"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="aadharNo"
                      >Aadhar Number</label>
                    <input
                      class="form-control"
                      type="text"
                      id="aadharNo"
                      name="aadharNo"
                      required
                    />
                  </div>
                  <div class="mb-3">
                    <label class="form-label" for="address"
                      >Address</label>
                    <input
                      class="form-control"
                      type="text"
                      id="address"
                      name="address"
                      required
                    />
                  </div>
                  <button
                    class="btn btn-success btn-block"
                    onclick="add_details()">
                    Register
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
