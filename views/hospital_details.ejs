    <main class="container mt-5">
      <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
          <div class="card mb-3">
              <div class="card-body"> 
                <div class="input-group mb-3">
                    <button class="btn btn-outline-secondary" type="button" value="Get Details" onclick="show_details()">Show Details</button>
                    <input type="number" class="form-control" id = "hospital-id"placeholder="hospital ID" aria-label="Example text with button addon" aria-describedby="button-addon1">
                </div>
                <h5>Hospital Details:</h3>
                <table class="table-success table-bordered" style="width:100%">
                    <tr>
                        <th>Hospital Name</th>
                        <th>Hospital Address</th>
                        <th>Hospital Specifications</th>
                    </tr>
                    <tr>
                        <td><div id="name"></div></td>
                        <td><div id="address"></div></td>
                        <td><div id="specs"></div></td>
                    </tr>
                </table>
              </div>
          </div>
